<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Claxton Connections </title>
    @Styles.Render("~/Content/cc.css")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container">
        <a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>
        <!-- box for web page-->
        <div id="masthead">
            <img src="~/Content/mastheadcc.gif" align="middle" />
        </div> <!-- close masthead-->
        <div id="top_nav">
            <!-- top nav bar-->
            <!-- top links -->
            <ul>
                <li>&#10023;</li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li> &#10023; </li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>&#10023;</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>&#10023;</li>
                <li>@Html.ActionLink("Guestbook", "Index", "GuestBook")</li>
                <li>&#10023;</li>
            </ul>
        </div> <!-- close top nav -->

        <div id="left_nav">
