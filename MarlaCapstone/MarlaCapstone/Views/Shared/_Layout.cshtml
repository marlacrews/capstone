        <div id="content">
            @RenderBody()
            
        </div> <!-- close content-->

        <footer>
            <p>&copy; @DateTime.Now.Year -Claxton Connections</p>
        </footer>
        
    </div> <!-- close container -->
        
</body>
</html>
